<Window x:Class="MacroScanAI.Windows.ScanWithAI.ScanWithAIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroScanAI.Windows.ScanWithAI"
        mc:Ignorable="d"
        Background="#1E1E1E"
        Title="ScanWithAIWindow" Height="450" Width="800">

    <Grid Margin="15">
        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- API Key and Begin Button -->

            <RowDefinition Height="30"/>
            <!-- 10px spacer -->
            
            <RowDefinition Height="Auto"/>
            <!-- Progressbar and overall result -->

            <RowDefinition Height="30"/>

            <RowDefinition Height="*"/>
            <!-- Results -->
        </Grid.RowDefinitions>

        <Border Background="#272730"
                BorderBrush="White"
                BorderThickness="1" 
                CornerRadius="5"
                Padding="15"
                Grid.Row="0">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- API Key Label -->
                <TextBlock Text="OpenAI API Key:"
                       Grid.Column="0"
                       Height="30"
                       Width="120"
                       Padding="0,4,0,0"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

                <!-- PasswordBox for API Key -->
                <PasswordBox x:Name="ApiKeyBox"
                         Grid.Column="1"
                         Padding="0"
                         Height="30"
                         FontSize="14"
                         Background="#2D2D2D"
                         Foreground="White"
                         BorderBrush="#444"
                         BorderThickness="1"/>

                <!-- Begin Scan Button -->
                <Button x:Name="BeginScanButton"
                    Grid.Column="2"
                    Width="100"
                    Content="Begin Scan"
                    Padding="0"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Stretch"
                    Background="#3A8DFF"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="BeginScanButton_Click"/>
            </Grid>
        </Border>

        <Border Background="#272730"
            BorderBrush="White"
            BorderThickness="1" 
            CornerRadius="5"
            Padding="15"
            Grid.Row="2" Grid.ColumnSpan="2">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Foreground="White"
                    Height="30"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="0,0,0,0">Status Scan</TextBlock>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <ProgressBar x:Name="ScanProgressBar"
                        Grid.Column="0"
                        Height="30"
                        Minimum="0"
                        Maximum="100"
                        Value="0"
                        Margin="0,0,0,0"
                        Foreground="#3A8DFF"
                        Background="#444"/>


                    <RichTextBox x:Name="OverallResultsBox" 
                         Grid.Column="1"
                         IsReadOnly="True" 
                         Background="#272730" 
                         Foreground="White"
                         BorderThickness="0"
                         FontSize="12"
                         Margin="0,4,0,0"
                         VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </Grid>
        </Border>

        <Border Background="#272730"
            BorderBrush="White"
            BorderThickness="1" 
            CornerRadius="5"
            Padding="15"
            Grid.Row="4">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Height="30"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="0,0,0,0">Code Module Report</TextBlock>

                <RichTextBox x:Name="ResultsBox"
                    Grid.Row="1"
                    IsReadOnly="True" 
                    Background="#1E1E1E" 
                    Foreground="White"
                    BorderThickness="0"
                    VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Border>


    </Grid>
</Window>